/* pages/search/search.wxss */
page{
  background-color: #f5f5f5;
}
.weui-search-bar {
  position: fixed;
  width: 100%;
  padding: 8px 0 8px 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 6rpx;
  background: #e5e5e5;
  border: 1rpx solid #e5e5e5;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-icon-search {
  width: 14px;
  height: 14px;
  vertical-align: middle;
  margin-right: 8rpx;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #999;
  background: #e5e5e5;
  line-height: 28px;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
  color: #999;
}

.weui-search-bar__cancel-btn {
  padding: 0 30rpx;
  line-height: 28px;
  color: #666;
  white-space: nowrap;
  font-size: 28rpx;
}

.article-list-box{
  padding: 92rpx 0 0 0;
}

.tips-title{
  background-color: #fff;
  padding: 10rpx 30rpx;
}
.tips-box{
  padding: 30rpx 20rpx 10rpx 30rpx;
}
.tips-tag{
  padding: 5rpx 10rpx;
  border: 1rpx solid #222;
  border-radius: 25rpx;
  display: inline-block;
  background-color: #fff;
  margin: 0 10rpx 10rpx 0;
  font-size: 24rpx;
}

.article-box {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 10rpx solid #f5f5f5;
}

.article-box .article-top {
  display: flex;
  align-items: center;
}

.article-box .head {
  background-color: #ff8635;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  color: #fff;
}

.article-box .name {
  font-size: 22rpx;
  color: #333;
  flex: 1;
  margin-left: 10rpx;
}

.article-box .type {
  color: #666;
  font-size: 22rpx;
}

.article-box .title {
  display: block;
  font-size: 26rpx;
  color: #222;
  line-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 15rpx;
}

.article-box .desc {
  display: -webkit-box;
  font-size: 22rpx;
  color: #999;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}

.article-box .icon {
  vertical-align: middle;
  width: 32rpx;
  height: 32rpx;
}

.article-box .time {
  font-size: 22rpx;
  color: #666;
  vertical-align: middle;
  flex: 1;
  text-align: right;
}
.highlight{
  color: #ff4646;
}