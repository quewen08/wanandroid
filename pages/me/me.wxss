/* pages/me/me.wxss */
page{background-color: #f5f5f5}



/*------------------------------登录区域------------------------------*/
.login{
	height: 270rpx;
	background: url("https://hzimg.huizhuang.com/mini/img/userinfo-bgimg.jpg") center;
	background-size: cover;
	overflow: hidden;
}
.login view{
	height: 126rpx;
	margin: 51rpx 0 0 40rpx;
	overflow: hidden;
}
.login view image{
	float: left;
	width: 120rpx;
	height: 120rpx;
	margin-right: 31rpx;
	border-radius: 50%;
	background-color: #fff
}
.login view button{
	float: left;
	height: 56rpx;
	border: 2rpx solid #333335;
	margin-top: 38rpx;
	line-height: 56rpx;
	font-size: 28rpx;
	color: #333335;
	border-radius: 56rpx;
}
.login view text{
	float: left;
	line-height: 126rpx;
	font-size: 40rpx;
	color: #333335
}
.line-box{
  background-color: #fff;
}
.bottom-line{
  border-bottom: 1rpx solid #e5e5e5;
  margin-left: 85rpx;
}

.top-20{
  margin-top: 20rpx;
}
.list-item{
  display: flex;
  align-items: center;
  background-color: #fff;
  padding:0 30rpx;
  height: 120rpx;
}
.list-item-img{
  width: 35rpx;
  height: 35rpx;
}
.list-item-name{
  font-size: 28rpx;
  color: #1a1a1a;
  margin-left: 20rpx;
}