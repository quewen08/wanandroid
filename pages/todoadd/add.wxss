/* pages/todoadd/add.wxss */
page{
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
}
.todo{
  margin-top: 10%;
}
.todo .title{
  margin-top: 30rpx;
}
.text-input{
  width: 100%;
  border: 1rpx solid #222;
  display: inline-block;
  text-align: left;
  font-size: 28rpx;
  color: #222;
  border-radius: 8rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding:30rpx 10rpx;
}

.text-time{
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #222;
  display: inline-block;
  text-align: left;
  font-size: 28rpx;
  color: #222;
  border-radius: 8rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding:15rpx 10rpx;
}

.text-content-input{
  width: 100%;
  height: 180rpx;
  border: 1rpx solid #222;
  display: inline-block;
  text-align: left;
  padding:10rpx;
  font-size: 28rpx;
  color: #222;
  border-radius: 8rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
}

.add-btn{
  width: 100%;
  padding: 20rpx 0;
  background-color: #222;
  border-radius: 40rpx;
  color: #fff;
  display: inline-block;
  margin-top: 30rpx;
  font-size: 28rpx;
  text-align: center;
}