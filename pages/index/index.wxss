/**index.wxss**/

page {
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.weui-search-bar {
  position: relative;
  padding: 8px 0 8px 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 6rpx;
  background: #e5e5e5;
  border: 1rpx solid #e5e5e5;
  margin-right: 30rpx;
  font-size: 0;
  padding: 8rpx;
}

.weui-icon-search {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  display: inline-block;
  vertical-align: middle;
}

.weui-search-bar__text {
  display: inline-block;
  color: #999;
  font-size: 28rpx;
  padding: 0;
  vertical-align: middle;
}

.banner-box {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.banner-image {
  width: 100%;
  height: 380rpx;
}

.article-box {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 10rpx solid #f5f5f5;
}

.article-box .article-top {
  display: flex;
  align-items: center;
}

.article-box .head {
  background-color: #ff8635;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  color: #fff;
}

.article-box .name {
  font-size: 22rpx;
  color: #333;
  flex: 1;
  margin-left: 10rpx;
}

.article-box .type {
  color: #666;
  font-size: 22rpx;
}

.article-box .article-title {
  display: flex;
  align-items: center;
}

.article-box .tips {
  font-size: 20rpx;
  text-align: center;
  align-items: center;
  align-self: center;
  align-content: center;
  margin-right: 4rpx;
  color: red;
  width: 60rpx;
  border: 0.6rpx solid red;
}

.article-box .tips-show {
  display: block;
}

.article-box .tips-hide {
  display: none;
}

.article-box .title {
  display: block;
  font-size: 26rpx;
  color: #222;
  line-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 15rpx;
}

.article-box .desc {
  display: -webkit-box;
  font-size: 22rpx;
  color: #999;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}

.article-box .icon {
  vertical-align: middle;
  width: 32rpx;
  height: 32rpx;
}

.article-box .time {
  font-size: 22rpx;
  color: #666;
  vertical-align: middle;
  flex: 1;
  text-align: right;
}
