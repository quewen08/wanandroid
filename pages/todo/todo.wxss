/* pages/todo/todo.wxss */

page {
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.type-bar {
  display: flex;
  background: #fff;
  -moz-box-shadow: 0px 4px 10rpx #ccc;
  -webkit-box-shadow: 0px 4px 10rpx #ccc;
  box-shadow: 0px 4px 10rpx #ccc;
}

.type-bar .item {
  flex: 1;
  text-align: center;
}

.type-bar .title {
  padding: 10rpx 0rpx;
  display: inline-block;
}

.type-bar .active {
  border-bottom: 4rpx solid #222;
}

.add {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  background-color: #ff4646;
  border: 1prx solid #222;
  border-radius: 50%;
  right: 20rpx;
  bottom: 20rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  color: #fff;
}

.todo-box {
  margin: 20rpx 15rpx 0 15rpx;
  -moz-box-shadow: 0px 0px 10px #ccc;
  -webkit-box-shadow: 0px 0px 10px #ccc;
  box-shadow: 0px 0px 10px #ccc;
  background-color: #fff;
  border-radius: 8rpx;
  font-size: 0;
  display: flex;
  align-items: center;
  
}

.todo-box .left-tips {
  width: 8rpx;
  background-color: #ff4646;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  height: 150rpx;
  display: inline-block;
}

.todo-box .green {
  background-color: green;
}

.todo-box .info-box {
  flex: 1;
  margin-left: 30rpx;
}

.info-box .time {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.info-box .title {
  font-size: 30rpx;
  color: #222;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: block;
  line-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content {
  margin: 0 23rpx;
  text-align: center;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  background-color: #ff4646;
  padding: 15rpx;
  -moz-box-shadow: 0px 0px 10px #ccc;
  -webkit-box-shadow: 0px 0px 10px #ccc;
  box-shadow: 0px 0px 10px #ccc;
  color: #fff;
}

.content-green {
  margin: 0 23rpx;
  text-align: center;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  background-color: green;
  padding: 15rpx;
  -moz-box-shadow: 0px 0px 10px #ccc;
  -webkit-box-shadow: 0px 0px 10px #ccc;
  box-shadow: 0px 0px 10px #ccc;
  color: #fff;
}

.todo-box .arrow {
  width: 32rpx;
  height: 32rpx;
  margin: 30rpx;
}

.todo-box .open {
  transform: rotate(180deg);
}

.scroll-box {
  display: flex;
  width: fit-content;
  position: relative;
  transition: left 0.2s ease-in-out;
  box-sizing: border-box;
}

.scroll-box .content-box {
  width: 750rpx;
  /* width: 720rpx; */
}

.scroll-box .delete {
  width: 160rpx;
  text-align: center;
  display: flex;
  left: -15rpx;
}

.delete .item1 {
  flex: 1;
  margin-top: 20rpx;
  background-color: #ff4646;
  display: flex;
  align-items: center;
  padding-left: 15rpx;
  color: #fff;
  font-size: 22rpx;
}

.delete .item2 {
  flex: 1;
  margin-top: 20rpx;
  background-color: green;
  display: flex;
  align-items: center;
  padding-left: 15rpx;
  color: #fff;
  font-size: 22rpx;
  border-left: 1rpx solid #fff;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
